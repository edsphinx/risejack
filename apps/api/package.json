{
  "name": "@vyrejack/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:ssl": "[ -f localhost+2.pem ] || mkcert localhost 127.0.0.1 ::1; HTTPS=true bun run --watch src/index.ts",
    "build": "bun x prisma generate && bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@vyrejack/shared": "workspace:*",
    "hono": "^4.6.14",
    "hono-rate-limiter": "^0.5.3",
    "ioredis": "^5.9.0",
    "pg": "^8.16.3",
    "prisma": "^7.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "bun-types": "^1.3.5",
    "dotenv": "^17.2.3",
    "typescript": "^5.7.2"
  }
}
